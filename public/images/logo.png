<svg width="120" height="40" viewBox="0 0 120 40" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Gradiente moderno -->
  <defs>
    <linearGradient id="modernGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#6366F1;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#EC4899;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="searchGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#10B981;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#059669;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Círculo principal con gradiente -->
  <circle cx="20" cy="20" r="18" fill="url(#modernGradient)" stroke="none"/>
  
  <!-- Símbolo de maletín moderno y minimalista -->
  <rect x="12" y="14" width="16" height="12" rx="2" fill="white" opacity="0.9"/>
  <rect x="16" y="11" width="8" height="4" rx="1" fill="white" opacity="0.9"/>
  <circle cx="20" cy="20" r="1.5" fill="url(#modernGradient)"/>
  
  <!-- Elemento de búsqueda (lupa estilizada) -->
  <circle cx="50" cy="20" r="12" fill="url(#searchGradient)" opacity="0.8"/>
  <circle cx="50" cy="20" r="6" fill="none" stroke="white" stroke-width="2" opacity="0.9"/>
  <line x1="54.5" y1="24.5" x2="58" y2="28" stroke="white" stroke-width="2" stroke-linecap="round" opacity="0.9"/>
  
  <!-- Elementos decorativos (puntos modernos) -->
  <circle cx="85" cy="12" r="3" fill="url(#modernGradient)" opacity="0.6"/>
  <circle cx="95" cy="20" r="4" fill="url(#searchGradient)" opacity="0.5"/>
  <circle cx="105" cy="28" r="2" fill="url(#modernGradient)" opacity="0.7"/>
  
  <!-- Líneas conectoras sutiles -->
  <line x1="38" y1="20" x2="38" y2="20" stroke="url(#modernGradient)" stroke-width="1" opacity="0.3"/>
  <path d="M 65 20 Q 75 15 85 12" stroke="url(#modernGradient)" stroke-width="1" fill="none" opacity="0.3"/>
  <path d="M 95 24 Q 100 26 105 28" stroke="url(#searchGradient)" stroke-width="1" fill="none" opacity="0.3"/>
</svg>